            <div class="row mb-4 gx-6 gy-3 align-items-center justify-content-between">
                <div class="col-auto">
                    <h2 class="mb-0">Roles</h2>
                </div>
                <div class="col-auto">
                    <a class="btn btn-primary px-5" asp-controller="Roles" asp-action="Create">
                        <i class="fa-solid fa-plus me-2"></i>New Role
                    </a>
                </div>
            </div>
