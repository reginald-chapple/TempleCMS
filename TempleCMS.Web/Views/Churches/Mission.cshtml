@model Church

@{
    ViewData["Title"] = "Church";
}

@section Stylesheets { 
}

<div class="content mb-5">
    <div class="card">
        <div class="card-header border-bottom-0 pb-0">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <div>
                        <h4 class="card-title mb-0"> 
                            Churches
                        </h4>
                    </div>
                </div>
                <div class="btn-reveal-trigger">
                    <button class="btn btn-sm dropdown-toggle dropdown-caret-none transition-none d-flex btn-reveal" type="button" data-bs-toggle="dropdown" data-boundary="window" aria-haspopup="true" aria-expanded="false" data-bs-reference="parent">
                        <span class="fas fa-ellipsis-h"></span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-end py-2">
                        <a class="dropdown-item" href="#!">Edit</a>
                        <a class="dropdown-item text-danger" href="#!">Delete</a>
                        <a class="dropdown-item" href="#!">Download</a>
                        <a class="dropdown-item" href="#!">Report abuse</a>
                    </div>
                </div>
            </div>
        </div>
        <div id="edit-church" class="card-body">
            <ul class="nav nav-underline deal-details scrollbar flex-nowrap w-100 pb-1 mb-3" id="myTab" role="tablist" style="overflow-y: hidden;">
                <li class="nav-item text-nowrap me-2" role="presentation">
                    <a class="nav-link" id="1-tab" asp-controller="Churches" asp-action="Edit" asp-route-id="@Model.Id" role="tab" aria-controls="tab-1" aria-selected="false" tabindex="-1"> 
                        Church
                    </a>
                </li>
                <li class="nav-item text-nowrap me-2" role="presentation">
                    <a class="nav-link" id="2-tab" asp-controller="Churches" asp-action="Image" asp-route-id="@Model.Id" role="tab" aria-controls="tab-2" aria-selected="false" tabindex="-1"> 
                        Image
                    </a>
                </li>
                <li class="nav-item text-nowrap me-2" role="presentation">
                    <a class="nav-link" id="3-tab" asp-controller="Churches" asp-action="Background" asp-route-id="@Model.Id" role="tab" aria-controls="tab-3" aria-selected="false" tabindex="-1"> 
                        Background
                    </a>
                </li>
                <li class="nav-item text-nowrap me-2" role="presentation">
                    <a class="nav-link" id="4-tab" asp-controller="Churches" asp-action="Message" asp-route-id="@Model.Id" role="tab" aria-controls="tab-4" aria-selected="false" tabindex="-1"> 
                        Message
                    </a>
                </li>
                <li class="nav-item text-nowrap me-2" role="presentation">
                    <a class="nav-link active" id="5-tab" asp-controller="Churches" asp-action="Mission" asp-route-id="@Model.Id" role="tab" aria-controls="tab-5" aria-selected="true"> 
                        Mission
                    </a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade active show" id="tab-5" role="tabpanel" aria-labelledby="5-tab">
                    @await Component.InvokeAsync("ChurchMissionForm", new { church = Model })
                </div>
            </div>
        </div>
        @* <div class="card-footer border-0">
            <p>Footer</p>
        </div> *@
    </div>    

    <partial name="_Footer" />
</div>

@section VendorScripts {
    <script src="~/vendors/tinymce/tinymce.min.js"></script>
}

@section CustomScripts {
<script src="~/js/site.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        tinymce.init({
            selector: '#Mission',
            height: 300,
            menubar: false,
            promotion: false,
            plugins: [
                'lists', 'link', 'wordcount'
            ],
            toolbar: 'undo redo | blocks | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist | link',
        });
    });
</script>
}