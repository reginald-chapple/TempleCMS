@model ClubActivityInputModel

<form method="post" asp-controller="Clubs" asp-action="SelectActivity">
    @foreach(var item in Model.ActivitySelections)
    {
        <div class="form-check form-check-inline mb-3 me-8">
            <input class="form-check-input" type="checkbox" @(Html.Raw(item.IsChecked ? "checked=\"checked\"" : "")) name="values" id="activity-@item.ActivityId" value="@item.ActivityId">
            <label class="form-check-label" for="value-@item.ActivityId">@item.Name</label>
        </div>
        
    }
    <input type="hidden" name="clubId" value="@Model.ClubId" />
    <div class="mb-3">
        <input type="submit" value="Save" class="btn btn-primary w-100" />
    </div>
</form>