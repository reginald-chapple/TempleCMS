@model GroupValueInputModel

<form method="post" asp-controller="Groups" asp-action="SelectValue">
    @foreach(var item in Model.ValueSelections)
    {
        <div class="form-check form-check-inline mb-3 me-8">
            <input class="form-check-input" type="checkbox" @(Html.Raw(item.IsChecked ? "checked=\"checked\"" : "")) name="values" id="value-@item.ValueId" value="@item.ValueId">
            <label class="form-check-label" for="value-@item.ValueId">@item.Name</label>
        </div>
        
    }
    <input type="hidden" name="groupId" value="@Model.GroupId" />
    <div class="mb-3">
        <input type="submit" value="Save" class="btn btn-primary w-100" />
    </div>
</form>